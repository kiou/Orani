{% extends "GlobalBundle:Client/Layout:layout.html.twig" %}

{% block metaTitle %}Inscription{% endblock %}

{% block contentitle %}
    <h1>Inscription</h1>
{% endblock %}

{% block content %}

	{{ form_start(form, {'attr': {'class': 'form-horizontal', novalidate: 'novalidate'}}) }}

		{{ form_errors(form) }}
		
		{{ form_label(form.username, "Pseudonyme *") }}
		{{ form_errors(form.username) }}
		{{ form_widget(form.username, {'attr': {'class': 'form-elem big'}}) }}<br>

        {{ form_label(form.nom, "Nom *") }}
        {{ form_errors(form.nom) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-elem big'}}) }}<br>

        {{ form_label(form.prenom, "Prénom *") }}
        {{ form_errors(form.prenom) }}
        {{ form_widget(form.prenom, {'attr': {'class': 'form-elem big'}}) }}<br>

		{{ form_label(form.email, "Email *") }}
		{{ form_errors(form.email) }}
		{{ form_widget(form.email, {'attr': {'class': 'form-elem big'}}) }}<br>

		{{ form_label(form.file, "Avatar") }}
		{{ form_errors(form.file) }}
		{{ form_widget(form.file, {'attr': {'class': 'form-elem big'}}) }}
		<div class="form-legende">
			<p>L'image doit faire exactement 150px par 150px<br>Le format doit être (jpg, png)<br>Le poid ne doit pas dépacer 1Mo</p>
		</div>

        {{ form_errors(form.password) }}
        {{ form_widget(form.password) }}

        {{ form_widget(form.Enregistrer, { 'label': 'S\'inscrire' }) }}

    {{ form_rest(form) }}

	{{ form_end(form) }}

    <br><p>Vous êtes déjà inscrit ? <a href="{{ path('login') }}">Connectez vous</a></p>

{% endblock %}