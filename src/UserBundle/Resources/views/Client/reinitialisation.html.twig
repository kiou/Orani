{% extends "GlobalBundle:Client/Layout:layout.html.twig" %}

{% block metaTitle %}{{ 'reinitialisation.metatitle'|trans }}{% endblock %}

{% block breadcrumb %}
    <div id="breadcrumb">
        {{ include("GlobalBundle:Client/Include:breadcrumb.html.twig", {'breadcrumb':breadcrumb }) }}
    </div>
{% endblock %}

{% block content %}

    {{ form_start(form, {'attr': {'class': 'form-horizontal', novalidate: 'novalidate'}}) }}

        {{ form_errors(form) }}

        {{ form_label(form.email, 'user.label.email'|trans ) }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-elem big'}}) }}<br>

        {{ form_widget(form.Enregistrer, { 'label': 'reinitialisation.label.submit'|trans }) }}

        {{ form_rest(form) }}

    {{ form_end(form) }}

{% endblock %}